<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moun"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/butRetour"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Connexion"
            android:textColor="@color/bleu"
            android:layout_gravity="center_horizontal"
            android:textSize="36sp" />



        <TextView
            android:id="@+id/textview_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue dans CasqueNET !"
            android:textColor="@color/bleu"
            android:layout_marginTop="50dp"
            android:layout_marginStart="2dp"
            android:textSize="16sp" />


        <TextView
        android:id="@+id/description_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="Email"
        android:textColor="@color/bleu"
        android:textSize="14sp" />


        <EditText
            android:id="@+id/emailSignIn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableStart="@drawable/ic_mail"
            android:hint="entrer votre email"
            android:drawablePadding="8dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/background_input"
            android:inputType="textEmailAddress"
            android:textColor="@color/bleu"
            android:textColorHint="#A4A5A6"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/description_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            android:textColor="@color/bleu"
            android:layout_marginTop="16dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/passwordSgnIn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="8dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/background_input"
            android:hint="entrer votre mot de passe.."
            android:inputType="textPassword"
            android:textColor="@color/bleu"
            android:textSize="15sp"
            android:textColorHint="#ADAEB1"
            android:autofillHints="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/remember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="sauvegarder"
                android:textColor="@color/bleu"
                android:layout_weight="1"
                android:textSize="14sp"
                tools:ignore="NestedWeights" />


            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mot de passe oublier ?"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="viewEnd">

            </TextView>


        </LinearLayout>



        <Button
            android:id="@+id/button_login"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:text="se connecter"
            android:textColor="@color/special_white"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/textview_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="S'inscrire"
            android:textColor="@color/bleu"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>